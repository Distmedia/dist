<video 
  transition:persist
  class="fixed top-0 left-0 h-screen w-screen object-cover -z-50"
  style="filter: hue-rotate(180deg)"
  autoplay loop muted playsinline>
</video>

<script>
  // console.log("init backdrop")

  const video = document.querySelector('video');
  const videoSources = [
      // { src: "/dist_reel_gray.webm", type: "video/webm" }, 
      // { src: "/dist_reel_gray.mp4", type: "video/mp4" }
      { src: "/dist_reel_green.webm", type: "video/webm" }, 
      { src: "/dist_reel_green.mp4", type: "video/mp4" }
  ]

	for (var videoSource of videoSources) {
    video.appendChild(Object.assign(document.createElement('source'), videoSource));
  }

	video.load();
</script>