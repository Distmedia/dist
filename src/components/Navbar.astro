---
interface Props {
	active?: string;
	additional?: string;
	back?: string;
}

const { active, additional, back } = Astro.props;

function applyStyle(routes) {
  return routes.map(r => {
    const style = r.id === active ? "" : "blur-xs hover:blur-none transition-blur"

    return { ...r, style }
  })
}

