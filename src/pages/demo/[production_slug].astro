---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";

import { productions } from "../../assets/listen.json";

export async function getStaticPaths() {
  return productions.map((production) => {
    return {
      params: { production_slug: production.slug },
      props: { production },
    };
  });
}

interface Props {
  production: {
    slug: string;
    title: string;
    spotify_embeds: string[];
  };
}

let { production } = Astro.props;
---

<Layout title={production.title}>
  <Navbar additional={production.title} back="/demo/lyssna" />
  <main
    class="min-h-screen min-w-full p-4 py-24 flex md:grid md:grid-cols-[420px_minmax(min-content,690px)]"
  >
    <div></div>

    <div class="w-full revert-filters">
      {
        production.spotify_embeds.map((embed) => (
          <div class="mb-4">
            <iframe
              class="rounded-xl"
              style="border-radius:12px"
              src={embed}
              width="100%"
              height="152"
              allowfullscreen=""
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </main>
</Layout>
