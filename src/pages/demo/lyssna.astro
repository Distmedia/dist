---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";

import { productions } from "../../assets/listen.json";
---

<Layout title="Lyssna">
  <Navbar active="listen" />
  <main
    class="min-h-screen min-w-full p-4 py-20 flex md:grid md:grid-cols-[280px_minmax(min-content,690px)]"
  >
    <div></div>

    <div class="flex flex-col">
      {
        productions.map((production) => (
          <div class="flex">
            <a href={`/demo/${production.slug}`}>
              {production.title}
            </a>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
